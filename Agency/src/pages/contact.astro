---
// Contact Page - BTP Agency
// ------------
// Description: Contact page with form and booking options

// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Section from '../components/ui/Section.astro'
import Row from '../components/ui/Row.astro'
import Col from '../components/ui/Col.astro'
import Button from '../components/ui/Button.astro'
import ContactFormBTP from '../components/blocks/contact/ContactFormBTP.astro'

// Content
// - SEO
const SEO = {
	title: 'Contact | Prenez Contact et Générez Plus de Chantiers',
	description:
		'Prenez contact avec notre équipe et commencez à générer plus de chantiers. Que vous ayez déjà un site ou non, nous vous montrons comment attirer et convertir des clients.'
}

const contactMethods = [
	{
		icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
		</svg>`,
			title: 'Email',
			value: 'amine.boukhari@vitanorix.com',
			link: 'mailto:amine.boukhari@vitanorix.com'
	},
	{
		icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
		</svg>`,
			title: 'Téléphone',
			value: '+33665393603',
			link: 'tel:+33665393603'
	},
	{
		icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
		</svg>`,
		title: 'Disponibilité',
		value: 'Lun-Ven, 9h-18h',
		link: null
	}
]
---

<Layout title={SEO.title} description={SEO.description}>
	<!-- Hero Section with Form -->
	<Section id="contact-hero" classes="bg-gradient-to-br from-primary-50 via-secondary-50 to-accent-50 dark:from-neutral-950 dark:via-secondary-950 dark:to-accent-950 relative overflow-hidden py-20">
		<div class="absolute inset-0 overflow-hidden pointer-events-none">
			<div class="absolute top-20 right-20 w-96 h-96 bg-gradient-to-br from-primary-400/20 to-accent-400/20 rounded-full blur-3xl"></div>
			<div class="absolute bottom-20 left-20 w-96 h-96 bg-gradient-to-br from-secondary-400/20 to-warning-400/20 rounded-full blur-3xl"></div>
		</div>
		
		<Row>
			<Col span="6" classes="self-center relative z-10">
				<span class="inline-block px-5 py-2 bg-gradient-to-r from-primary-600 to-secondary-600 text-white rounded-full text-sm font-semibold mb-4 shadow-lg">
					CONTACTEZ-NOUS
				</span>
				<h1 class="text-4xl md:text-5xl font-bold mb-6">
					Prenez contact et commencez à <strong class="bg-gradient-to-r from-primary-600 via-secondary-600 to-accent-600 bg-clip-text text-transparent">générer plus de chantiers</strong>
				</h1>
				<p class="text-lg text-neutral-600 dark:text-neutral-400 mb-8">
					Que vous ayez déjà un site ou non, nous vous montrons comment attirer et convertir des clients rapidement.
				</p>
				
				<!-- Contact Methods -->
				<div class="space-y-4">
					{contactMethods.map((method) => (
						<div class="flex items-center gap-4">
							<div class="w-12 h-12 rounded-xl bg-white dark:bg-neutral-800 shadow-md flex items-center justify-center text-primary-600 dark:text-primary-400" set:html={method.icon} />
							<div>
								<p class="text-sm text-neutral-500 dark:text-neutral-500">{method.title}</p>
								{method.link ? (
									<a href={method.link} class="font-medium text-neutral-900 dark:text-white hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
										{method.value}
									</a>
								) : (
									<p class="font-medium text-neutral-900 dark:text-white">{method.value}</p>
								)}
							</div>
						</div>
					))}
				</div>
			</Col>
			<Col span="6" classes="relative z-10">
				<ContactFormBTP classes="shadow-2xl" />
			</Col>
		</Row>
	</Section>
	
	<!-- Booking Section -->
	<Section id="booking" classes="py-20 bg-white dark:bg-neutral-950">
		<Row>
			<Col span="12">
				<div class="max-w-4xl mx-auto">
					<div class="bg-gradient-to-br from-primary-600 to-secondary-700 rounded-3xl p-8 md:p-12 text-white text-center relative overflow-hidden">
						<!-- Background decoration -->
						<div class="absolute inset-0 overflow-hidden pointer-events-none">
							<div class="absolute top-0 right-0 w-64 h-64 bg-white/10 rounded-full blur-3xl"></div>
							<div class="absolute bottom-0 left-0 w-64 h-64 bg-white/10 rounded-full blur-3xl"></div>
						</div>
						
						<div class="relative z-10">
							<div class="w-16 h-16 mx-auto mb-6 rounded-2xl bg-white/20 flex items-center justify-center">
								<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
								</svg>
							</div>
							<h2 class="text-3xl md:text-4xl font-bold mb-4">
								Préférez-vous un appel ?
							</h2>
							<p class="text-lg text-primary-100 mb-8 max-w-2xl mx-auto">
								Réservez un diagnostic gratuit de 15-30 minutes pour discuter de votre projet et découvrir comment nous pouvons vous aider à générer plus de chantiers.
							</p>
							<Button 
								size="lg" 
								link="/contact" 
								classes="bg-white text-primary-600 hover:bg-primary-50 shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-105"
							>
								Réserver un diagnostic gratuit
							</Button>
							
							<!-- Trust indicators -->
							<div class="mt-8 flex flex-wrap gap-6 justify-center text-primary-200 text-sm">
								<div class="flex items-center gap-2">
									<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
										<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
									</svg>
									<span>Sans engagement</span>
								</div>
								<div class="flex items-center gap-2">
									<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
										<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
									</svg>
									<span>100% gratuit</span>
								</div>
								<div class="flex items-center gap-2">
									<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
										<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
									</svg>
									<span>Conseils personnalisés</span>
								</div>
							</div>
						</div>
					</div>
				</div>
			</Col>
		</Row>
	</Section>
	
	<!-- FAQ Mini Section -->
	<Section id="contact-faq" classes="py-20 bg-gradient-to-b from-primary-50/50 to-white dark:from-neutral-900 dark:to-neutral-950">
		<Row>
			<Col span="12" align="center" classes="mb-12">
				<h2 class="text-3xl font-bold text-neutral-900 dark:text-white">
					Questions fréquentes
				</h2>
			</Col>
		</Row>
		<Row>
			<Col span="12">
				<div class="max-w-3xl mx-auto space-y-4">
					<div class="bg-white dark:bg-neutral-900 rounded-xl p-6 shadow-md border border-neutral-200 dark:border-neutral-800">
						<h3 class="font-bold text-neutral-900 dark:text-white mb-2">Combien de temps pour avoir une réponse ?</h3>
						<p class="text-neutral-600 dark:text-neutral-400">Nous répondons à toutes les demandes sous 24 heures ouvrées.</p>
					</div>
					<div class="bg-white dark:bg-neutral-900 rounded-xl p-6 shadow-md border border-neutral-200 dark:border-neutral-800">
						<h3 class="font-bold text-neutral-900 dark:text-white mb-2">Le diagnostic est-il vraiment gratuit ?</h3>
						<p class="text-neutral-600 dark:text-neutral-400">Oui, le premier appel de diagnostic est 100% gratuit et sans engagement. C'est l'occasion de discuter de vos besoins.</p>
					</div>
					<div class="bg-white dark:bg-neutral-900 rounded-xl p-6 shadow-md border border-neutral-200 dark:border-neutral-800">
						<h3 class="font-bold text-neutral-900 dark:text-white mb-2">Je n'ai pas encore de site, est-ce un problème ?</h3>
						<p class="text-neutral-600 dark:text-neutral-400">Pas du tout ! Nous pouvons créer votre site de A à Z, optimisé dès le départ pour générer des leads.</p>
					</div>
				</div>
			</Col>
		</Row>
	</Section>
</Layout>
