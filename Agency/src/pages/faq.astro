---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/PageHeader.astro'
import FAQ from '../components/blocks/FAQ/FaqSticky.astro'
import TextImage from '../components/blocks/basic/TextImage.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'

// Data
import faqData from '../data/json-files/faqData.json'
// - FAQ Categories
const faqPricing = faqData.filter((faq) => faq.category === 'pricing')
const faqIntegrations = faqData.filter((faq) => faq.category === 'integrations')

// Content
import faqImage1 from '../assets/faq/faq-01.png'
// - SEO
const SEO = {
	title: 'Vitanorix | Questions Fréquentes - Toutes les Réponses',
	description:
		'Trouvez les réponses à vos questions sur Vitanorix : tarifs, services, génération de leads BTP, SEO local et bien plus. Découvrez comment transformer votre site en machine à générer des chantiers.'
}
// - Page Header
const header = {
	title: 'Questions fréquentes sur <strong>Vitanorix</strong>',
	text: 'Trouvez rapidement les réponses à vos questions sur nos services BTP'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<FAQ
		title="Vos questions sur nos services BTP, répondues"
		text="Obtenez tous les détails sur les plans tarifaires de Vitanorix. Découvrez les coûts, les remises et les options d'abonnement pour trouver le plan qui correspond le mieux à vos besoins et à votre budget."
		data={faqPricing}
	/>
	<CTA />
</Layout>
