---
// Services Page - BTP Agency
// ------------
// Description: Detailed services page for BTP agency

// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Section from '../components/ui/Section.astro'
import Row from '../components/ui/Row.astro'
import Col from '../components/ui/Col.astro'
import Button from '../components/ui/Button.astro'
import FinalCTA from '../components/blocks/CTA/FinalCTA.astro'

// Content
// - SEO
const SEO = {
	title: 'Nos Services BTP | Génération de Clients et Chantiers',
	description:
		'Du site web à la génération de leads, nous aidons votre entreprise BTP à transformer sa présence en ligne en résultats concrets. Découvrez nos services.'
}

const services = [
	{
		id: 'site-web',
		icon: `<svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
		</svg>`,
		title: 'Création et optimisation de site web BTP',
		subtitle: 'Votre vitrine digitale, optimisée pour convertir',
		description: 'Que vous n\'ayez pas encore de site ou que votre site actuel ne convertisse pas, nous le transformons en un outil actif pour décrocher des chantiers.',
		benefit: 'Attirez des prospects qualifiés et transformez chaque visiteur en client potentiel.',
		features: [
			'Design professionnel adapté au BTP',
			'Optimisation mobile et performance',
			'Formulaires de contact efficaces',
			'Présentation de vos réalisations',
			'SEO de base inclus'
		],
		cta: 'Optimiser ou créer mon site',
		ctaLink: '/contact'
	},
	{
		id: 'generation-leads',
		icon: `<svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z"/>
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z"/>
		</svg>`,
		title: 'Publicité / Génération de leads pour chantiers',
		subtitle: 'Des demandes de devis directement dans votre boîte',
		description: 'Ciblez les bons clients et remplissez votre agenda de chantiers sans prospection froide. Nous mettons en place des campagnes qui attirent des prospects qualifiés.',
		benefit: 'Recevez des demandes de devis et projets directement depuis votre site.',
		features: [
			'Campagnes Google Ads ciblées',
			'Publicités Facebook/Instagram',
			'Landing pages optimisées',
			'Suivi des conversions',
			'Rapports mensuels détaillés'
		],
		cta: 'Commencer à générer des projets',
		ctaLink: '/contact'
	},
	{
		id: 'seo-local',
		icon: `<svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
		</svg>`,
		title: 'SEO / Visibilité locale pour BTP',
		subtitle: 'Soyez trouvé par vos futurs clients',
		description: 'Apparaître en tête de Google pour vos services et transformer les recherches locales en projets concrets. Dominez votre zone géographique.',
		benefit: 'Soyez trouvé par les clients recherchant un constructeur ou entrepreneur dans votre zone.',
		features: [
			'Optimisation Google Business Profile',
			'SEO local et mots-clés BTP',
			'Création de contenu optimisé',
			'Backlinks de qualité',
			'Suivi des positions'
		],
		cta: 'Booster ma visibilité locale',
		ctaLink: '/contact'
	},
	{
		id: 'dashboard',
		icon: `<svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
		</svg>`,
		title: 'Dashboards / Suivi de projets et leads',
		subtitle: 'Gérez vos opportunités en un clic',
		description: 'Gérez vos prospects et vos projets depuis un tableau de bord centralisé, et concentrez-vous sur vos chantiers sans perdre de temps.',
		benefit: 'Suivez vos leads et vos chantiers facilement, ne ratez aucune opportunité.',
		features: [
			'Tableau de bord centralisé',
			'Suivi des leads en temps réel',
			'Gestion des projets',
			'Notifications automatiques',
			'Rapports et analytics'
		],
		cta: 'Optimiser la gestion de mes chantiers',
		ctaLink: '/contact'
	}
]
---

<Layout title={SEO.title} description={SEO.description}>
	<!-- Hero Section -->
	<Section id="services-hero" classes="bg-gradient-to-br from-primary-50 via-secondary-50 to-accent-50 dark:from-neutral-950 dark:via-secondary-950 dark:to-accent-950 relative overflow-hidden py-20">
	
		
		<Row>
			<Col span="12" align="center" classes="relative z-10">
				<span class="inline-block px-5 py-2 bg-gradient-to-r from-primary-600 to-secondary-600 text-white rounded-full text-sm font-semibold mb-4 shadow-lg">
					NOS SERVICES
				</span>
				<h1 class="text-4xl md:text-5xl lg:text-6xl max-w-4xl mx-auto">
					Nos services pour générer plus de <strong class="bg-gradient-to-r from-primary-600 via-secondary-600 to-accent-600 bg-clip-text text-transparent">chantiers et de clients BTP</strong>
				</h1>
				<p class="text-lg md:text-xl text-neutral-600 dark:text-neutral-400 max-w-3xl mx-auto mt-6">
					Du site web à la génération de leads, nous aidons votre entreprise BTP à transformer sa présence en ligne en résultats concrets.
				</p>
			</Col>
		</Row>
	</Section>
	
	<!-- Services Sections -->
	{services.map((service, index) => (
		<Section 
			id={service.id} 
			classes={`py-20 ${index % 2 === 0 ? 'bg-white dark:bg-neutral-950' : 'bg-gradient-to-b from-primary-50/50 to-white dark:from-neutral-900 dark:to-neutral-950'}`}
		>
			<Row>
				<Col span="12">
					<div class={`grid md:grid-cols-2 gap-12 items-center ${index % 2 === 1 ? 'md:flex-row-reverse' : ''}`}>
						<!-- Content -->
						<div class={index % 2 === 1 ? 'md:order-2' : ''}>
							<div class="text-primary-600 dark:text-primary-400 mb-6" set:html={service.icon} />
							<h2 class="text-3xl md:text-4xl font-bold mb-4 text-neutral-900 dark:text-white">
								{service.title}
							</h2>
							<p class="text-xl text-primary-600 dark:text-primary-400 font-medium mb-4">
								{service.subtitle}
							</p>
							<p class="text-neutral-600 dark:text-neutral-400 mb-6">
								{service.description}
							</p>
							
							<!-- Benefit box -->
							<div class="bg-gradient-to-r from-success-50 to-success-50 dark:from-success-900/20 dark:to-success-900/20 border border-success-200 dark:border-success-800 rounded-xl p-4 mb-6">
								<div class="flex items-start gap-3">
									<svg class="w-6 h-6 text-success-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
										<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
									</svg>
									<p class="text-success-800 dark:text-success-300 font-medium">
										<strong>Bénéfice :</strong> {service.benefit}
									</p>
								</div>
							</div>
							
							<Button size="lg" link={service.ctaLink} classes="shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105">
								{service.cta}
							</Button>
						</div>
						
						<!-- Features Card -->
						<div class={`${index % 2 === 1 ? 'md:order-1' : ''}`}>
							<div class="bg-white dark:bg-neutral-900 rounded-2xl shadow-xl border border-neutral-200 dark:border-neutral-800 p-8">
								<h3 class="text-lg font-bold mb-6 text-neutral-900 dark:text-white">
									Ce que vous obtenez :
								</h3>
								<ul class="space-y-4">
									{service.features.map((feature) => (
										<li class="flex items-start gap-3">
											<svg class="w-5 h-5 text-primary-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
												<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
											</svg>
											<span class="text-neutral-700 dark:text-neutral-300">{feature}</span>
										</li>
									))}
								</ul>
							</div>
						</div>
					</div>
				</Col>
			</Row>
		</Section>
	))}
	
	<FinalCTA />
</Layout>
