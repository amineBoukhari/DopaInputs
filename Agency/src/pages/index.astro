---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/HomeCTA.astro'
import ResultsVisualization from '../components/blocks/features/ResultsVisualization.astro'
import CaseStudy from '../components/blocks/features/CaseStudy.astro'
import ServicesGrid from '../components/blocks/services/ServicesGrid.astro'
import ServicesShowcase from '../components/blocks/services/ServicesShowcase.astro'
import ProcessSteps from '../components/blocks/process/ProcessSteps.astro'
import PricingBTP from '../components/blocks/pricing/PricingBTP.astro'
import FAQBTP from '../components/blocks/FAQ/FAQBTP.astro'
import FinalCTA from '../components/blocks/CTA/FinalCTA.astro'

// Content
// - SEO
const SEO = {
	title: 'Vitanorix | Générateur de Clients et Chantiers BTP',
	description:
		'Vitanorix transforme votre site web en un générateur de clients et de chantiers. Des leads qualifiés, une visibilité locale renforcée et des résultats concrets pour votre entreprise BTP.'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero />
	<ResultsVisualization />
	<CaseStudy />
	<ServicesShowcase />
	<ServicesGrid />
	<ProcessSteps />
	<PricingBTP />
	<FAQBTP />
	<FinalCTA />
