---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/HomeCTA.astro'
import ServicesGrid from '../components/blocks/services/ServicesGrid.astro'
import ClientLogos from '../components/blocks/socialproof/ClientLogos.astro'
import ProjectShowcase from '../components/blocks/portfolio/ProjectShowcase.astro'
import Features from '../components/blocks/features/FeatureCards.astro'
import ProcessSteps from '../components/blocks/process/ProcessSteps.astro'
import Testimonial from '../components/blocks/testimonials/BasicDark.astro'
import HighlightBlocks from '../components/blocks/highlights/HightlightRows.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'

// Content
// - Testimonial background
import testimonialBackground from '../assets/testimonial-bg-01.webp'
// - SEO
const SEO = {
	title: 'Digital Agency | Transform Your Vision Into Reality',
	description:
		'We create stunning websites and digital experiences that drive results. From design to deployment, we\'re your partner in digital excellence. Trusted by 500+ businesses.'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero />
	<ClientLogos />
	<ServicesGrid />
	<ProcessSteps />
	<ProjectShowcase />
	<Features />
	<Testimonial bg={testimonialBackground} bgPosition="right" />
	<HighlightBlocks />
	<CTA />
</Layout>
