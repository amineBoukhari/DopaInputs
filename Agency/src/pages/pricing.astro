const header = {
	title: 'Choose the plan that <strong class="bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent">perfectly fits</strong> your needs',
	text: 'All plans come with a 30-day money-back guarantee. No hidden fees, cancel anytime.'
