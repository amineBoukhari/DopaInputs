---
// Blog Index Page - BTP Resources
// ------------
// Description: The blog index page with BTP-focused content

// Components
// - Layout
import Layout from '../../layouts/Layout.astro'
// - UI
import Section from '../../components/ui/Section.astro'
import Row from '../../components/ui/Row.astro'
import Col from '../../components/ui/Col.astro'
import Button from '../../components/ui/Button.astro'
import BlogPosts from '../../components/blocks/blog/BlogPosts.astro'

// Data
import { getCollection } from 'astro:content'

// Content
// - SEO
const SEO = {
	title: 'Blog | Ressources pour Entreprises BTP',
	description:
		'Articles, études et conseils pour générer plus de clients et projets grâce au digital. Découvrez nos ressources pour entreprises BTP.'
}

const allPosts = await getCollection('blog')

const categories = [
	{ name: 'Sites Web BTP', slug: 'sites-web' },
	{ name: 'Génération de Leads', slug: 'generation-leads' },
	{ name: 'SEO Local', slug: 'seo-local' },
	{ name: 'Marketing Digital', slug: 'marketing' }
]
---

<Layout title={SEO.title} description={SEO.description}>
	<!-- Hero Section -->
	<Section id="blog-hero" classes="bg-gradient-to-br from-primary-50 via-secondary-50 to-accent-50 dark:from-neutral-950 dark:via-secondary-950 dark:to-accent-950 relative overflow-hidden py-20">
		<div class="absolute inset-0 overflow-hidden pointer-events-none">
			<div class="absolute top-20 right-20 w-96 h-96 bg-gradient-to-br from-primary-400/20 to-accent-400/20 rounded-full blur-3xl"></div>
			<div class="absolute bottom-20 left-20 w-96 h-96 bg-gradient-to-br from-secondary-400/20 to-warning-400/20 rounded-full blur-3xl"></div>
		</div>
		
		<Row>
			<Col span="12" align="center" classes="relative z-10">
				<span class="inline-block px-5 py-2 bg-gradient-to-r from-primary-600 to-secondary-600 text-white rounded-full text-sm font-semibold mb-4 shadow-lg">
					BLOG & RESSOURCES
				</span>
				<h1 class="text-4xl md:text-5xl lg:text-6xl max-w-4xl mx-auto">
					Ressources pour entreprises BTP : <strong class="bg-gradient-to-r from-primary-600 via-secondary-600 to-accent-600 bg-clip-text text-transparent">conseils et stratégies digitales</strong>
				</h1>
				<p class="text-lg md:text-xl text-neutral-600 dark:text-neutral-400 max-w-3xl mx-auto mt-6">
					Articles, études et conseils pour générer plus de clients et projets grâce au digital.
				</p>
				
				<!-- Categories -->
				<div class="flex flex-wrap gap-3 justify-center mt-8">
					{categories.map((category) => (
						<a 
							href={`/blog/tags/${category.slug}`}
							class="px-4 py-2 rounded-full bg-white dark:bg-neutral-800 border border-neutral-200 dark:border-neutral-700 text-neutral-700 dark:text-neutral-300 hover:bg-primary-50 dark:hover:bg-primary-900/30 hover:border-primary-300 dark:hover:border-primary-700 hover:text-primary-600 dark:hover:text-primary-400 transition-all duration-300 text-sm font-medium"
						>
							{category.name}
						</a>
					))}
				</div>
			</Col>
		</Row>
	</Section>
	
	<!-- Featured Articles Suggestions -->
	<Section id="featured-topics" classes="py-12 bg-white dark:bg-neutral-950">
		<Row>
			<Col span="12">
				<div class="max-w-6xl mx-auto">
					<div class="grid md:grid-cols-4 gap-4">
						<div class="bg-gradient-to-br from-primary-50 to-secondary-50 dark:from-primary-900/20 dark:to-secondary-900/20 rounded-xl p-6 border border-primary-100 dark:border-primary-800">
							<div class="w-10 h-10 rounded-lg bg-primary-500 flex items-center justify-center mb-3">
								<svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
								</svg>
							</div>
							<h3 class="font-bold text-neutral-900 dark:text-white text-sm mb-1">Comment attirer plus de clients BTP avec un site web optimisé</h3>
						</div>
						<div class="bg-gradient-to-br from-secondary-50 to-accent-50 dark:from-secondary-900/20 dark:to-accent-900/20 rounded-xl p-6 border border-secondary-100 dark:border-secondary-800">
							<div class="w-10 h-10 rounded-lg bg-secondary-500 flex items-center justify-center mb-3">
								<svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/>
								</svg>
							</div>
							<h3 class="font-bold text-neutral-900 dark:text-white text-sm mb-1">5 astuces pour générer des leads qualifiés dans le BTP</h3>
						</div>
						<div class="bg-gradient-to-br from-accent-50 to-warning-50 dark:from-accent-900/20 dark:to-warning-900/20 rounded-xl p-6 border border-accent-100 dark:border-accent-800">
							<div class="w-10 h-10 rounded-lg bg-accent-500 flex items-center justify-center mb-3">
								<svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
								</svg>
							</div>
							<h3 class="font-bold text-neutral-900 dark:text-white text-sm mb-1">SEO local pour les entreprises BTP : ce qu'il faut savoir</h3>
						</div>
						<div class="bg-gradient-to-br from-success-50 to-success-50 dark:from-success-900/20 dark:to-success-900/20 rounded-xl p-6 border border-success-100 dark:border-success-800">
							<div class="w-10 h-10 rounded-lg bg-success-500 flex items-center justify-center mb-3">
								<svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
								</svg>
							</div>
							<h3 class="font-bold text-neutral-900 dark:text-white text-sm mb-1">Optimiser votre site pour transformer les visites en contrats</h3>
						</div>
					</div>
				</div>
			</Col>
		</Row>
	</Section>
	
	<!-- Blog Posts -->
	<BlogPosts data={allPosts} />
	
	<!-- Newsletter CTA -->
	<Section id="newsletter" classes="py-20 bg-gradient-to-br from-primary-600 to-secondary-700 text-white">
		<Row>
			<Col span="12" align="center">
				<div class="max-w-2xl mx-auto">
					<h2 class="text-3xl md:text-4xl font-bold mb-4">
						Recevez nos conseils pour booster vos chantiers
					</h2>
					<p class="text-primary-100 mb-8">
						Inscrivez-vous à notre newsletter et recevez chaque semaine des conseils pratiques pour générer plus de clients BTP.
					</p>
					<form class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
						<input 
							type="email" 
							placeholder="Votre email" 
							class="flex-1 px-4 py-3 rounded-xl text-neutral-900 focus:ring-2 focus:ring-white focus:outline-none"
							required
						/>
						<Button type="submit" classes="bg-white text-primary-600 hover:bg-primary-50 whitespace-nowrap">
							S'inscrire
						</Button>
					</form>
					<p class="text-xs text-primary-200 mt-4">
						Pas de spam, uniquement des conseils utiles. Désabonnement en un clic.
					</p>
				</div>
			</Col>
		</Row>
	</Section>
</Layout>
