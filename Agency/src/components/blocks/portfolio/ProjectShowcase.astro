---
// Project Showcase Section
// ------------
// Description: A showcase section displaying recent projects with hover effects

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
import Button from '../../ui/Button.astro'

// Sample project data - replace with your actual projects
const projects = [
	{
		title: 'E-Commerce Platform',
		category: 'Web Development',
		image: '/blog/blog-01.webp',
		description: 'Modern shopping experience with seamless checkout'
	},
	{
		title: 'Corporate Website',
		category: 'Design & Development',
		image: '/blog/blog-02.webp',
		description: 'Professional business presence with CMS integration'
	},
	{
		title: 'Mobile App Design',
		category: 'UI/UX Design',
		image: '/blog/blog-03.webp',
		description: 'Intuitive mobile experience for healthcare'
	},
	{
		title: 'Brand Identity',
		category: 'Branding',
		image: '/blog/blog-01.webp',
		description: 'Complete brand refresh for tech startup'
	}
]
---

<Section id="projects" classes="bg-gradient-to-b from-neutral-50 to-white dark:from-neutral-900 dark:to-neutral-950 relative overflow-hidden">
	<!-- Animated background -->
	<div class="absolute inset-0 pointer-events-none">
		<div class="absolute top-1/4 left-10 w-72 h-72 bg-gradient-to-br from-indigo-400/10 to-purple-400/10 rounded-full blur-3xl"></div>
		<div class="absolute bottom-1/4 right-10 w-72 h-72 bg-gradient-to-br from-blue-400/10 to-pink-400/10 rounded-full blur-3xl"></div>
	</div>
	
	<Row>
		<Col span="12" align="center" classes="mb-12 relative z-10">
			<span class="inline-block px-5 py-2 bg-gradient-to-r from-indigo-600 to-purple-600 text-white rounded-full text-sm font-semibold mb-4 shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105">
				PORTFOLIO
			</span>
			<h2 class="text-pretty">Our <strong class="bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">Recent Work</strong></h2>
			<p class="pb-0 text-lg max-w-3xl mx-auto">
				Explore our portfolio of successful projects. Each one represents our commitment to excellence
				and innovation in digital solutions.
			</p>
		</Col>
	</Row>
	<Row>
		{
			projects.map((project, index) => (
				<Col span="6" classes="mb-6">
					<div class="group relative overflow-hidden rounded-2xl shadow-modern hover:shadow-modern-xl transition-all duration-500 h-80 bg-white dark:bg-neutral-900 hover:-translate-y-2">
						<div class="absolute inset-0 bg-gradient-to-t from-neutral-900 via-neutral-900/60 to-transparent z-10 group-hover:from-blue-900/90 group-hover:via-indigo-900/60 transition-all duration-500" />
						<img
							src={project.image}
							alt={project.title}
							class="w-full h-full object-cover group-hover:scale-110 group-hover:rotate-2 transition-all duration-700"
						/>
						<div class="absolute bottom-0 left-0 right-0 p-6 z-20 transform transition-all duration-500">
							<span class="inline-block px-3 py-1 bg-gradient-to-r from-blue-600 to-indigo-600 text-white text-xs font-semibold rounded-full mb-2 shadow-lg group-hover:scale-110 transition-transform duration-300">
								{project.category}
							</span>
							<h3 class="text-2xl font-bold text-white mb-2 group-hover:text-blue-200 transition-colors duration-300">{project.title}</h3>
							<p class="text-neutral-200 mb-4 opacity-0 group-hover:opacity-100 transform translate-y-4 group-hover:translate-y-0 transition-all duration-500">
								{project.description}
							</p>
							<a
								href="/contact"
								class="inline-flex items-center text-white font-semibold opacity-0 group-hover:opacity-100 transform translate-y-4 group-hover:translate-y-0 transition-all duration-500 hover:text-blue-200"
							>
								View Project
								<svg
									class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform"
									fill="none"
									stroke="currentColor"
									viewBox="0 0 24 24"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M9 5l7 7-7 7"
									/>
								</svg>
							</a>
						</div>
						
						<!-- Animated corner glow -->
						<div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-blue-500/30 to-purple-500/30 blur-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
					</div>
				</Col>
			))
		}
	</Row>
	<Row>
		<Col span="12" align="center" classes="mt-8 relative z-10">
			<Button size="lg" link="/contact" variation="outline" classes="hover:shadow-modern transition-all duration-300 hover:scale-105 border-2">View All Projects</Button>
		</Col>
	</Row>
</Section>
