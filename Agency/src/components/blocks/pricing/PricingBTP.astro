---
// Pricing Section for BTP
// ------------
// Description: A section with pricing packages for BTP services

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
import Button from '../../ui/Button.astro'

const packages = [
	{
		name: 'Pack Essentiel',
		subtitle: 'Site Web BTP',
		priceFrom: '500€',
		priceTo: '800€',
		description: 'Commencez à générer des leads et des demandes de chantiers dès la mise en ligne.',
		features: [
			'Site optimisé pour conversion',
			'Présentation de vos services BTP',
			'Formulaire de contact efficace',
			'Design professionnel et moderne',
			'Responsive mobile'
		],
		cta: 'Obtenir ce pack',
		featured: false
	},
	{
		name: 'Pack Croissance',
		subtitle: 'Site + Leads',
		priceFrom: '1 500€',
		priceTo: '3 000€',
		description: 'Des demandes de devis et projets directement dans votre agenda, leads qualifiés.',
		features: [
			'Tout le Pack Essentiel inclus',
			'Campagnes publicitaires ciblées',
			'Optimisation SEO locale',
			'Génération de leads qualifiés',
			'Demandes de devis automatisées',
			'Suivi mensuel des performances'
		],
		cta: 'Commencer à générer des projets',
		featured: true
	},
	{
		name: 'Pack Premium',
		subtitle: 'Full Service BTP',
		priceFrom: '5 000€',
		priceTo: '10 000€',
		description: 'Votre entreprise BTP fonctionne comme un système complet : plus de clients, plus de chantiers, moins de stress administratif.',
		features: [
			'Tout le Pack Croissance inclus',
			'Dashboard de gestion complet',
			'SEO avancé et contenu',
			'Système de gestion des leads',
			'Support prioritaire dédié',
			'Rapports détaillés et analytics',
			'Accompagnement stratégique'
		],
		cta: 'Mettre mon entreprise sur pilote automatique',
		featured: false
	}
]
---

<Section id="pricing" classes="bg-gradient-to-b from-white via-primary-50/30 to-white dark:from-neutral-950 dark:via-secondary-950/30 dark:to-neutral-950 relative overflow-hidden py-20">
	<!-- Decorative elements -->
	<div class="absolute top-0 left-1/4 w-96 h-96 bg-gradient-to-br from-primary-400/10 to-secondary-400/10 rounded-full blur-3xl"></div>
	<div class="absolute bottom-0 right-1/4 w-96 h-96 bg-gradient-to-br from-accent-400/10 to-warning-400/10 rounded-full blur-3xl"></div>
	
	<Row>
		<Col span="12" align="center" classes="mb-12 max-w-4xl mx-auto relative z-10">
			<span class="inline-block px-5 py-2 bg-gradient-to-r from-primary-600 to-secondary-600 text-white rounded-full text-sm font-semibold mb-4 shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105">
				NOS OFFRES
			</span>
			<h2 class="text-4xl md:text-5xl">
				Choisissez le pack qui <strong class="bg-gradient-to-r from-primary-600 via-secondary-600 to-accent-600 bg-clip-text text-transparent">correspond à vos besoins</strong>
			</h2>
			<p class="pb-0 text-lg text-neutral-600 dark:text-neutral-400">
				Des solutions adaptées à chaque étape de votre croissance. Commencez petit et évoluez selon vos résultats.
			</p>
		</Col>
	</Row>
	
	<Row>
		{packages.map((pkg, index) => (
			<Col span="4" classes="mb-8">
				<div class={`group h-full rounded-3xl transition-all duration-500 hover:-translate-y-2 relative overflow-hidden ${pkg.featured ? 'bg-gradient-to-br from-primary-600 to-secondary-700 text-white shadow-2xl scale-105' : 'bg-white dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-800 shadow-lg hover:shadow-xl'}`}>
					{pkg.featured && (
						<div class="absolute top-0 right-0 bg-gradient-to-r from-yellow-400 via-amber-400 to-yellow-600 text-neutral-900 text-xs font-bold px-4 py-1 rounded-bl-xl">
							POPULAIRE
						</div>
					)}
					
					<div class="p-8">
						<!-- Header -->
						<div class="text-center mb-6">
							<p class={`text-sm font-medium mb-1 ${pkg.featured ? 'text-primary-200' : 'text-primary-600 dark:text-primary-400'}`}>
								{pkg.subtitle}
							</p>
							<h3 class={`text-2xl font-bold mb-2 ${pkg.featured ? 'text-white' : 'text-neutral-900 dark:text-white'}`}>
								{pkg.name}
							</h3>
							<div class="flex items-baseline justify-center gap-2">
								<span class={`text-4xl font-bold ${pkg.featured ? 'text-white' : 'bg-gradient-to-r from-primary-600 to-secondary-600 bg-clip-text text-transparent'}`}>
									{pkg.priceFrom}
								</span>
								<span class={pkg.featured ? 'text-primary-200' : 'text-neutral-500'}>—</span>
								<span class={`text-4xl font-bold ${pkg.featured ? 'text-white' : 'bg-gradient-to-r from-secondary-600 to-accent-600 bg-clip-text text-transparent'}`}>
									{pkg.priceTo}
								</span>
							</div>
						</div>
						
						<!-- Description -->
						<p class={`text-sm text-center mb-6 ${pkg.featured ? 'text-primary-100' : 'text-neutral-600 dark:text-neutral-400'}`}>
							{pkg.description}
						</p>
						
						<!-- Features -->
						<ul class="space-y-3 mb-8">
							{pkg.features.map((feature) => (
								<li class="flex items-start gap-3">
									<svg class={`w-5 h-5 flex-shrink-0 mt-0.5 ${pkg.featured ? 'text-success-300' : 'text-success-500'}`} fill="currentColor" viewBox="0 0 20 20">
										<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
									</svg>
									<span class={`text-sm ${pkg.featured ? 'text-white' : 'text-neutral-700 dark:text-neutral-300'}`}>
										{feature}
									</span>
								</li>
							))}
						</ul>
						
						<!-- CTA -->
						<a 
							href="/contact"
							class={`block w-full py-4 px-6 rounded-xl font-semibold text-center transition-all duration-300 hover:scale-105 ${pkg.featured ? 'bg-white text-primary-600 hover:bg-primary-50 shadow-lg' : 'bg-gradient-to-r from-primary-600 to-secondary-600 text-white hover:from-primary-700 hover:to-secondary-700 shadow-md hover:shadow-lg'}`}
						>
							{pkg.cta}
						</a>
					</div>
				</div>
			</Col>
		))}
	</Row>
</Section>
