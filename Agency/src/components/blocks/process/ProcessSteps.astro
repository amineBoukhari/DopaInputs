---
// Process Section
// ------------
// Description: Shows the work process/methodology for BTP clients

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
import Button from '../../ui/Button.astro'

const steps = [
	{
		number: '01',
		title: 'Audit ou création de votre site web',
		description: 'Analyse de votre site actuel ou création d\'un site optimisé pour la conversion.',
		result: 'Un site qui attire les prospects et les incite à vous contacter.'
	},
	{
		number: '02',
		title: 'Génération de leads qualifiés',
		description: 'Mise en place de campagnes publicitaires et/ou SEO pour capter des clients dans votre zone.',
		result: 'Des demandes de devis et projets ciblés directement dans votre agenda.'
	},
	{
		number: '03',
		title: 'Suivi et conversion des prospects',
		description: 'Tableau de bord centralisé pour suivre les leads et vos projets en cours.',
		result: 'Ne ratez aucune opportunité et optimisez vos conversions.'
	}
]
---

<Section id="process" classes="bg-gradient-to-br from-neutral-900 via-secondary-950 to-neutral-900 dark:from-black dark:via-secondary-950 dark:to-black text-white relative overflow-hidden py-20">
	<!-- Animated background elements -->
	<div class="absolute inset-0 opacity-30">
		<div class="absolute top-20 left-20 w-96 h-96 bg-gradient-to-br from-primary-600/30 to-secondary-600/30 rounded-full blur-3xl animate-float"></div>
		<div class="absolute bottom-20 right-20 w-96 h-96 bg-gradient-to-br from-accent-600/30 to-warning-600/30 rounded-full blur-3xl animate-float" style="animation-delay: 3s;"></div>
	</div>
	
	<Row>
		<Col span="12" align="center" classes="mb-16 relative z-10">
			<span class="inline-block px-5 py-2 bg-gradient-to-r from-primary-500 to-secondary-500 text-white rounded-full text-sm font-semibold mb-4 shadow-glow-blue hover:shadow-glow-primary transition-all duration-300 hover:scale-105">
				NOTRE MÉTHODE
			</span>
			<h2 class="text-pretty text-4xl md:text-5xl text-white">
				Comment nous transformons votre site en <strong class="bg-gradient-to-r from-primary-400 to-secondary-400 bg-clip-text text-transparent">générateur de chantiers</strong>
			</h2>
			<p class="pb-0 text-lg text-neutral-400 max-w-3xl mx-auto">
				Une méthode simple, testée et orientée résultats pour attirer, convertir et gérer vos clients BTP.
			</p>
		</Col>
	</Row>
	<Row>
		{
			steps.map((step, index) => (
				<Col span="4" classes="mb-8">
					<div class="relative group h-full">
						{index < steps.length - 1 && (
							<div class="hidden lg:block absolute top-16 left-full w-full h-1 bg-gradient-to-r from-primary-500 via-secondary-500 to-transparent opacity-50 group-hover:opacity-100 transition-opacity duration-500" />
						)}
						<div class="bg-white/5 backdrop-blur-sm rounded-2xl p-8 border border-white/10 h-full hover:bg-white/10 transition-all duration-500 hover:-translate-y-2">
							<div class="relative mb-8">
								<div class="text-7xl font-bold text-primary-600/10 mb-4 transition-all duration-500 group-hover:text-primary-600/20 group-hover:scale-110">{step.number}</div>
								<div class="absolute top-2 left-0 w-20 h-20 rounded-2xl bg-gradient-to-br from-primary-600 to-secondary-600 flex items-center justify-center shadow-glow-blue transition-all duration-500 group-hover:scale-110 group-hover:rotate-6">
									<span class="text-2xl font-bold text-white">{step.number}</span>
								</div>
							</div>
							<h3 class="text-xl font-bold mb-3 mt-8 text-white group-hover:text-primary-400 transition-colors duration-300">{step.title}</h3>
							<p class="text-neutral-400 group-hover:text-neutral-300 transition-colors duration-300 mb-4">{step.description}</p>
							<div class="mt-4 pt-4 border-t border-white/10">
								<p class="text-sm text-primary-400 flex items-start gap-2">
									<svg class="w-5 h-5 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
										<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
									</svg>
									<span><strong>Résultat :</strong> {step.result}</span>
								</p>
							</div>
						</div>
						
						<!-- Hover glow effect -->
						<div class="absolute -inset-4 bg-gradient-to-br from-primary-500/10 to-secondary-500/10 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 -z-10"></div>
					</div>
				</Col>
			))
		}
	</Row>
	<Row>
		<Col span="12" align="center" classes="mt-8 relative z-10">
			<Button size="lg" link="/contact" style="primary" classes="shadow-glow-blue hover:shadow-glow-primary transition-all duration-300 hover:scale-105">
				Découvrir comment nous pouvons booster vos projets BTP
			</Button>
		</Col>
	</Row>
</Section>
