---
// Feature Card
// ------------
// Description: The Card for presenting a feature
// Properties:
// - Title: the title of the card
// - Subtitle: the subtitle of the card
// - Image: the main image of the card
// - Link: The link to the blog post
// Reference: https://wind-ui.com/components/cards/

// Components
// - UI
import Card from './BasicCard.astro'

// Props
type Props = {
	title?: string
	subtitle?: string
	image?: any
	link?: string
}
const { title , subtitle, image, link } = Astro.props
---

<Card
	title={title}
	subtitle={subtitle}
	titleSize="xl"
	link={link}
	image={image}
	type="image-bottom"
	classes="!bg-white dark:!bg-neutral-900 h-full justify-between border border-neutral-200 dark:border-neutral-800 hover:border-primary-300 dark:hover:border-primary-700 !shadow-modern hover:!shadow-modern-lg hover:-translate-y-2 transition-all duration-500 group rounded-2xl overflow-hidden"
/>
