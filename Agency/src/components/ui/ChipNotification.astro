---
// Chip Notification
// ------------
// Description: Compact elements that allow to highlight meaningful information, or direct users to important content.
// Properties:
// - Elevated: whether the chip is elevated or not
// - Radius: the radius of the chip
// - classes: additional classes
// Reference: https://wind-ui.com/components/chip-notifications

// Props
type Props = {
	elevated?: boolean
	radius?: string
	classes?: string
}
const { elevated, radius = 'rounded', classes } = Astro.props
---

<div class:list={['chip shadow-glow-primary', { ['chip--elevated shadow-glow-primary']: elevated }, { [`${classes}`]: classes }, radius]}>
	<slot name="button" />
	<span class="chip--body">
		<slot />
	</span>
</div>

<style>
	.chip {
		display: inline-flex;
		align-items: center;
		border-width: 1px;
		border-color: rgb(229 229 229);
		background-color: rgb(255 255 255 / 0.5);
		padding-top: 0.125rem;
		padding-bottom: 0.125rem;
		color: rgb(115 115 115);
		padding: 12px;
		margin-bottom: 15px;
		font-weight: 700px;
		border-radius: 6px;
	}
	
	:global(.dark) .chip {
		border-color: rgb(38 38 38);
		background-color: rgb(38 38 38 / 0.5);
		color: rgb(212 212 212);
	}
	
	.chip :global(p) {
		margin: 0;
	}
	
	.chip--elevated {
		box-shadow: 0 1px 2px 0 rgb(51 65 85 / 0.1);
	}
	
	.chip--body {
		display: inline-flex;
		align-items: center;
		padding-left: 1rem;
		padding-right: 1rem;
	}
	
	.chip--body :global(strong) {
		padding-right: 0.25rem;
		font-weight: 00;
	}
</style>
