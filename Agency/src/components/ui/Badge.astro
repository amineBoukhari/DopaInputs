---
// Badge
// ------------
// Description: A badge is a visual indicator that draws attention to an interface element. It enhances the component to which it is attached with additional information.
// Properties:
// - Name: the text of the badge
// - Link: the link of the badge (optional)
// - Type: the type of the badge (neutral, primary)
// - Classes: additional classes

// Reference: https://wind-ui.com/components/badges/

// Props
type Props = {
	name: string
	link?: string
	type?: string
	classes?: string
}
const { name, link, type = 'neutral', classes } = Astro.props
---

{
	link ? (
		<a
			href={link}
			class:list={['badge', { [`${classes}`]: classes }, { [`badge--${type}`]: type }]}
		>
			{name}
		</a>
	) : (
		<span class:list={['badge', { [`${classes}`]: classes }, { [`badge--${type}`]: type }]}>
			{name}
		</span>
	)
}

<style>
	.badge {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		gap: 0.25rem;
		border-radius: 0.25rem;
		padding-left: 0.375rem;
		padding-right: 0.375rem;
		padding-top: 0.25rem;
		padding-bottom: 0.25rem;
		font-size: 0.875rem;
		line-height: 1.25rem;
		transition-property: color, background-color, border-color, text-decoration-color, fill, stroke;
		transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
		transition-duration: 150ms;
	}
	.badge--neutral {
		background-color: rgb(245 245 245);
		color: rgb(115 115 115);
	}
	:global(.dark) .badge--neutral {
		background-color: rgb(38 38 38);
		color: rgb(115 115 115);
	}
	.badge--primary {
		background-color: rgb(var(--color-primary-500));
		color: rgb(255 255 255);
	}
</style>
